<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewPager_ratingSeat_layout"
    android:layout_width="370dp"
    android:layout_height="127dp"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/viewPager_seat_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="좌석"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewPager_seat_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/sit_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_seat_textView" />

    <TextView
        android:id="@+id/viewPager_twoseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="2인좌석"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/viewPager_seat_image"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_seat_textView" />

    <RatingBar
        android:id="@+id/viewPager_rating_twoseat"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_custom"
        android:stepSize="1"
        app:layout_constraintStart_toEndOf="@+id/viewPager_twoseat"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_seat_textView" />

    <TextView
        android:id="@+id/viewPager_fourseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="4인좌석"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/viewPager_seat_image"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_twoseat" />

    <RatingBar
        android:id="@+id/viewPager_rating_fourseat"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_custom"
        android:stepSize="1"
        app:layout_constraintStart_toEndOf="@+id/viewPager_fourseat"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_rating_twoseat" />

    <TextView
        android:id="@+id/viewPager_manyseat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="다인좌석"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/viewPager_rating_twoseat"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_seat_textView" />

    <RatingBar
        android:id="@+id/viewPager_rating_manyseat"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_custom"
        android:stepSize="1"
        app:layout_constraintStart_toEndOf="@+id/viewPager_manyseat"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_seat_textView" />

    <TextView
        android:id="@+id/viewPager_toilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="화장실"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/viewPager_rating_fourseat"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_manyseat" />

    <RatingBar
        android:id="@+id/viewPager_rating_toilet"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_custom"
        android:stepSize="1"
        app:layout_constraintStart_toEndOf="@+id/viewPager_toilet"
        app:layout_constraintTop_toBottomOf="@+id/viewPager_rating_manyseat" />
</androidx.constraintlayout.widget.ConstraintLayout>