                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="383dp" />

            <TextView
                android:id="@+id/light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조명"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="260dp"
                tools:layout_editor_absoluteY="419dp" />

            <TextView
                android:id="@+id/taste_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="맛"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backspace_button" />

            <TextView
                android:id="@+id/study_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스터디"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="13dp"
                tools:layout_editor_absoluteY="349dp" />

            <Button
                android:id="@+id/location_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/yellow_button"
                android:padding="10dp"
                android:text="위치인증"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/write_review" />

            <TextView
                android:id="@+id/select_tag1"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/selected_tag_textview"
                android:text=""
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="538dp" />

            <RatingBar
                android:id="@+id/rating_beverage"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_custom"
                android:stepSize="1"
                app:layout_constraintStart_toEndOf="@+id/beverage"
                app:layout_constraintTop_toBottomOf="@+id/rating_dessert" />

            <RatingBar
                android:id="@+id/rating_light"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_custom"
                android:stepSize="1"
                tools:layout_editor_absoluteX="310dp"
                tools:layout_editor_absoluteY="421dp" />

            <TextView
                android:id="@+id/beverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:text="기타음료"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/rating_acerbity"
                app:layout_constraintTop_toBottomOf="@+id/dessert" />

            <TextView
                android:id="@+id/sour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="60dp"
                android:text="산미"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/taste_image"
                app:layout_constraintTop_toBottomOf="@+id/requester_input" />

            <TextView
                android:id="@+id/quiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조용함"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="254dp"
                tools:layout_editor_absoluteY="383dp" />

            <TextView
                android:id="@+id/write_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="리뷰 작성"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:text="디저트"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/rating_sour"
                app:layout_constraintTop_toBottomOf="@+id/requester_input" />

            <Button
                android:id="@+id/finish_button"
                android:layout_width="108dp"
                android:layout_height="45dp"
                android:background="@drawable/brown_button"
                android:text="작성완료"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="661dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>