                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="343dp"
                tools:layout_editor_absoluteY="537dp" />

            <TextView
                android:id="@+id/seat_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="좌석"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taste_image" />

            <TextView
                android:id="@+id/select_tag2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/selected_tag_textview"
                android:text=""
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="538dp" />

            <Button
                android:id="@+id/request_button"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/brown_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="코멘터리 >"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/select_tag1" />

            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
