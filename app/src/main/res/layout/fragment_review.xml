                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_custom"
                android:stepSize="1"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="421dp" />

            <TextView
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#3B2314"
                tools:layout_editor_absoluteY="117dp" />

            <Button
                android:id="@+id/backspace_button"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/back"
                app:layout_constraintEnd_toStartOf="@+id/requester_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/write_review" />

            <TextView
                android:id="@+id/tag_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="태그 추가"
