                tools:layout_editor_absoluteY="375dp" />

            <RatingBar
                android:id="@+id/rating_acerbity"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_custom"
                android:stepSize="1"
                app:layout_constraintStart_toEndOf="@+id/acerbity"
                app:layout_constraintTop_toBottomOf="@+id/rating_sour" />

            <Button
                android:id="@+id/search_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search"
                app:layout_constraintBottom_toBottomOf="@+id/requester_input"
                app:layout_constraintEnd_toEndOf="@+id/requester_input" />

            <RatingBar
                android:id="@+id/rating_twoseat"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="60dp"
                android:isIndicator="false"
                android:numStars="5"
                android:progressDrawable="@drawable/rating_custom"
                android:stepSize="1"
                app:layout_constraintStart_toEndOf="@+id/twoseat"
                app:layout_constraintTop_toBottomOf="@+id/rating_acerbity" />

            <TextView
                android:id="@+id/plug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="콘센트"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="105dp"
                tools:layout_editor_absoluteY="419dp" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#3B2314"
                tools:layout_editor_absoluteY="461dp" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#3B2314"
                tools:layout_editor_absoluteY="589dp" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/brown_button"
