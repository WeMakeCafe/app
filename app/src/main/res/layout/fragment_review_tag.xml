<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.ReviewFragment">


    <Button
        android:id="@+id/backspace_button"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addTag_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="태그 추가"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tagSearch_input"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge_top_back"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addTag_textView"/>

    <Button
        android:id="@+id/tagSearch_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/tagSearch_input"
        app:layout_constraintEnd_toEndOf="@+id/tagSearch_input"
        app:layout_constraintTop_toTopOf="@+id/tagSearch_input"/>

    <ImageView
        android:id="@+id/brownFrame"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/tag_v2"
        app:layout_constraintBottom_toTopOf="@+id/addTag_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagSearch_input"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/beigeFrame"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/edge_bottom_back"
        android:scaleType="fitXY"
        android:src="@drawable/tag_front"
        app:layout_constraintBottom_toBottomOf="@+id/brownFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brownFrame"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/tasteImage"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:background="@drawable/edge_top_bottom"
        android:clickable="true"
        android:src="@drawable/edge_top_back"
        app:layout_constraintBottom_toTopOf="@+id/beigeFrame"
        app:layout_constraintEnd_toEndOf="@+id/beigeFrame"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/beigeFrame"/>

    <TextView
        android:id="@+id/tasteTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음료, 맛"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tasteImage"
        app:layout_constraintEnd_toEndOf="@+id/tasteImage"
        app:layout_constraintStart_toStartOf="@+id/tasteImage"
        app:layout_constraintTop_toTopOf="@+id/tasteImage" />

    <ImageView
        android:id="@+id/feelingImage"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:src="@drawable/edge_top_back_brown"
        app:layout_constraintBottom_toTopOf="@+id/beigeFrame"
        app:layout_constraintEnd_toEndOf="@+id/beigeFrame"
        app:layout_constraintStart_toStartOf="@+id/beigeFrame" />

    <TextView
        android:id="@+id/feelingTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분위기"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/feelingImage"
        app:layout_constraintEnd_toEndOf="@+id/feelingImage"
        app:layout_constraintStart_toStartOf="@+id/feelingImage"
        app:layout_constraintTop_toTopOf="@+id/feelingImage" />

    <ImageView
        android:id="@+id/serviceImage"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:src="@drawable/edge_top_back_brown"
        app:layout_constraintBottom_toTopOf="@+id/beigeFrame"
        app:layout_constraintEnd_toEndOf="@+id/beigeFrame"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/beigeFrame" />

    <TextView
        android:id="@+id/serviceTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/serviceImage"
        app:layout_constraintEnd_toEndOf="@+id/serviceImage"
        app:layout_constraintStart_toStartOf="@+id/serviceImage"
        app:layout_constraintTop_toTopOf="@+id/serviceImage" />

    <ScrollView
        android:id="@+id/addTagScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/beigeFrame"
        app:layout_constraintEnd_toEndOf="@+id/beigeFrame"
        app:layout_constraintStart_toStartOf="@+id/beigeFrame"
        app:layout_constraintTop_toTopOf="@+id/beigeFrame">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tagRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_acerbity"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#쓴맛"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_sour"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#신맛"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_salty"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#짠맛"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_sweet"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#단맛"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#향미"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_body"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#바디감"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_coldBrew"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#콜드브루"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_manyMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#메뉴多"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_cheap"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#가성비"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_copious"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#양많음"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_dessert"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#디저트맛집"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_nonCoffee"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:text="#논커피맛집"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_blank1"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_blank2"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_blank3"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tag_blank4"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_blank5"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tag_blank6"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addTag1"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/selected_tag_textview_v2"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/brownFrame"
        app:layout_constraintEnd_toStartOf="@+id/addTag2"
        app:layout_constraintStart_toStartOf="@+id/brownFrame"
        app:layout_constraintTop_toBottomOf="@+id/beigeFrame" />

    <Button
        android:id="@+id/addTag2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/selected_tag_textview_v2"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/brownFrame"
        app:layout_constraintEnd_toEndOf="@+id/brownFrame"
        app:layout_constraintStart_toStartOf="@+id/brownFrame"
        app:layout_constraintTop_toBottomOf="@+id/beigeFrame" />

    <Button
        android:id="@+id/addTag3"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/selected_tag_textview_v2"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/brownFrame"
        app:layout_constraintEnd_toEndOf="@+id/brownFrame"
        app:layout_constraintStart_toEndOf="@+id/addTag2"
        app:layout_constraintTop_toBottomOf="@+id/beigeFrame" />

    <Button
        android:id="@+id/addTag_button"
        android:layout_width="108dp"
        android:layout_height="45dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/edge_square_brown"
        android:text="추가하기"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>