<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.ReviewFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout23"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/addTag_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="태그 추가"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout23">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/brownFrame3"
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tag_v2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.491"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/beigeFrame2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/edge_bottom_back"
                    android:scaleType="fitXY"
                    android:src="@drawable/tag_front"
                    app:layout_constraintBottom_toBottomOf="@+id/brownFrame3"
                    app:layout_constraintEnd_toEndOf="@+id/brownFrame3"
                    app:layout_constraintStart_toStartOf="@+id/brownFrame3"
                    app:layout_constraintTop_toTopOf="@+id/brownFrame3" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constrant_taste"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/beigeFrame2"
                    app:layout_constraintEnd_toEndOf="@+id/beigeFrame2"
                    app:layout_constraintStart_toStartOf="@+id/beigeFrame2"
                    app:layout_constraintTop_toTopOf="@+id/brownFrame3">

                    <ImageView
                        android:id="@+id/tasteimage7"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                        android:src="@drawable/edge_top_bottom"
                        app:layout_constraintBottom_toBottomOf="@+id/feelingImage7"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/feelingImage7"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                        android:layout_marginBottom="349dp"
                        android:src="@color/transper"
                        app:layout_constraintBottom_toBottomOf="@+id/tag_recycle"
                        app:layout_constraintEnd_toStartOf="@+id/serviceimage7"
                        app:layout_constraintStart_toEndOf="@+id/tasteimage7" />

                    <ImageView
                        android:id="@+id/serviceimage7"
                        android:layout_width="100dp"
                        android:layout_height="26dp"
                        android:src="@color/transper"
                        app:layout_constraintBottom_toBottomOf="@+id/feelingImage7"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tasteTab7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="음료, 맛"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/tasteimage7"
                        app:layout_constraintEnd_toEndOf="@+id/tasteimage7"
                        app:layout_constraintStart_toStartOf="@+id/tasteimage7"
                        app:layout_constraintTop_toTopOf="@+id/tasteimage7" />

                    <TextView
                        android:id="@+id/feelingTab7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분위기"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/feelingImage7"
                        app:layout_constraintEnd_toEndOf="@+id/feelingImage7"
                        app:layout_constraintStart_toStartOf="@+id/feelingImage7"
                        app:layout_constraintTop_toTopOf="@+id/feelingImage7" />

                    <TextView
                        android:id="@+id/serviceTab7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서비스"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/serviceimage7"
                        app:layout_constraintEnd_toEndOf="@+id/serviceimage7"
                        app:layout_constraintStart_toStartOf="@+id/serviceimage7"
                        app:layout_constraintTop_toTopOf="@+id/serviceimage7" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tag_recycle"
                        android:layout_width="0dp"
                        android:layout_height="350dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/addTag1"
                    android:layout_width="88dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/addTag2"
                    app:layout_constraintStart_toStartOf="@+id/brownFrame3"
                    app:layout_constraintTop_toTopOf="@+id/addTag2" />

                <TextView
                    android:id="@+id/addTag2"
                    android:layout_width="88dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/brownFrame3"
                    app:layout_constraintEnd_toEndOf="@+id/brownFrame3"
                    app:layout_constraintStart_toStartOf="@+id/brownFrame3"
                    app:layout_constraintTop_toBottomOf="@+id/beigeFrame2" />

                <TextView
                    android:id="@+id/addTag3"
                    android:layout_width="88dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/selected_tag_textview_v2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/brownFrame3"
                    app:layout_constraintStart_toEndOf="@+id/addTag2"
                    app:layout_constraintTop_toTopOf="@+id/addTag2" />

                <Button
                    android:id="@+id/tag1_delete_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/delete_button"
                    app:layout_constraintStart_toStartOf="@+id/addTag1"
                    app:layout_constraintTop_toBottomOf="@+id/beigeFrame2" />

                <Button
                    android:id="@+id/tag2_delete_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/delete_button"
                    app:layout_constraintStart_toStartOf="@+id/addTag2"
                    app:layout_constraintTop_toBottomOf="@+id/beigeFrame2" />

                <Button
                    android:id="@+id/tag3_delete_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/delete_button"
                    app:layout_constraintStart_toStartOf="@+id/addTag3"
                    app:layout_constraintTop_toBottomOf="@+id/beigeFrame2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout26"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout25">

                <Button
                    android:id="@+id/addTag_button3"
                    android:layout_width="108dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edge_square_brown"
                    android:text="추가하기"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/reviewTag_footer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout26">

                <ImageView
                    android:id="@+id/reviewTag_footerLogo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/reviewTag_footerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2"
                    android:text="상호명: 위메카 We Make Cafe\n개발자: 임현승, 서현준, 송상화, 이재윤, 전현구\n이메일: suwonUni@gmail.com\n카카오톡: @위메카 친구 추가하고 소식을 받아보세요"
                    android:textColor="@color/black"
                    android:textSize="8dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>